# Keyboard layout
bindsym $mod+space exec ~/.config/scripts/toggle_keybinding.sh 

# Wallpaper
exec_always feh --bg-fill ~/docs/wallpaper.png

# Close windows
bindsym $mod+Shift+q kill

# Lock
bindsym $mod+Shift+x exec i3lock -i ~/docs/wallpaper.png
bindsym XF86ScreenSaver exec i3lock -i ~/docs/wallpaper.png

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && pkill -RTMIN+1 i3blocks 
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && pkill -RTMIN+1 i3blocks 
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && pkill -RTMIN+1 i3blocks

# Screen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# Touchpad controls
bindsym XF86TouchpadToggle exec /home/kuzyn/.config/scripts/toggle_touchpad.sh 

# Screen enable
bindsym XF86Display exec xrandr --output VGA1 --right-of LVDS1 --auto --rotate left --output LVDS1 --mode 1366x768 --rotate normal && i3-msg restart

# Media player controls
bindsym XF86AudioPlay exec cmus-remote --pause
bindsym XF86AudioPause exec cmus-remote --pause
bindsym XF86AudioNext exec cmus-remote --next
bindsym XF86AudioPrev exec cmus-remote --prev
bindsym XF86AudioStop exec cmus-remote --stop

# Screenshot
bindsym $mod+Shift+s exec maim -s | xclip -selection clipboard -t image/png
bindsym $mod+Shift+a exec maim -s ~/pictures/$(date +%s).png

